<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="mauiMyApp.View.SigninPage"
    >
    <ContentPage.Content>
    <StackLayout>
    <Label Text="Signin" FontSize="30" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20"/>
        <Entry Placeholder="Email" x:Name="EmailEntry" />
        <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" />
        <Button Text="Signin"  HorizontalOptions="FillAndExpand" Margin="0,20,0,0" Clicked="Button_Clicked"/>
        
    </StackLayout>
        
    </ContentPage.Content>
</ContentPage>

